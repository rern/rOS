[Unit]
Description=A spotify playing daemon
Wants=sound.target
After=sound.target
Wants=network-online.target
After=network-online.target

[Service]
CPUAffinity=3
ExecStart=/usr/bin/spotifyd --no-daemon
ExecStartPost=/srv/http/bash/cmd.sh nicespotify
Restart=always
RestartSec=12

[Install]
WantedBy=default.target
